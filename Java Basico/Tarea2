public class Funciones {
    public static void main(String[] args) {
    double priceIva = getPriceIva();
    System.out.println("priceIva: " + priceIva);

    }
    static double getPriceIva() {
        double price = 100;
        double iva = 21;
        return ((price * iva / 100) + price);
    }
}
